! Emacs stuff
Emacs.menuBar: 0
Emacs.toolBar: 0
Emacs.verticalScrollBars: off
Emacs.FontBackend: xft,x
Emacs*font: Operator Mono Medium:style=Medium-13
Emacs*letterSpace: 0
Emacs.geometry: 180x40

! Fonts
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

!xterm*font: xft:Hermit:style=Regular:pixelsize=19

xterm*font: xft:Operator Mono Nerd Font Mono:pixelsize=19:antialias=true:style=Medium
xterm*italicFont: xft:Operator Mono Nerd Font Mono:pixelsize=19:antialias=true:style=Medium\ Italic
xterm*boldFont: xft:Operator Mono Nerd Font Mono:pixelsize=19:antialias=true:style=Bold
xterm*letterSpace: 0
xterm*allow_bold: true


! URxvt General config
!------------------------------------------------
URxvt*iconFile: /usr/share/icons/Numix-Circle/48/apps/terminal.svg
URxvt.geometry: 80x22

! URxvt Fonts
URxvt*font: xft:OperatorMono Medium:pixelsize=19:antialias=true:style=Medium,xft:NotoEmoji Nerd Font Mono:style=Regular,xft:Symbola
URxvt*italicFont: xft:OperatorMono Book:pixelsize=19:antialias=true:style=Medium\ Italic
URxvt*boldFont: xft:OperatorMono Bold:pixelsize=19:antialias=true
URxvt*letterSpace: 0
URxvt*allow_bold: true

! URxvt Borders
URxvt*internalBorder: 0
URxvt*externalBorder: 0

! URxvt Enable link support
URxvt.perl-ext-common: default,matcher,clipboard,font-size

!disable the fucking bell
URxvt.insecure: false

! URxvt Copy paste shortcuts
URxvt.iso14755: False
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste

! URxvt Scrollbar and cursor style
URxvt*saveLines: 300000
URxvt.scrollBar: false
URxvt*cursorBlink: true
URxvt*cursorUnderline: true
! URxvt Dynamic font size
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease


