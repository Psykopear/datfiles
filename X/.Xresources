! Emacs stuff
! UI elements
Emacs.menuBar: 0
Emacs.toolBar: 0
Emacs.verticalScrollBars: off
! Font settings
Emacs.FontBackend: xft,x
Emacs*font: OperatorMonoNerdFont-14:horiz=1920:vert=1080:spacing=m
Emacs.geometry: 100x32

! URxvt General config
!------------------------------------------------
URxvt*iconFile: /usr/share/icons/Numix-Circle/48/apps/terminal.svg
URxvt.geometry: 80x22

! URxvt Fonts
URxvt*font: xft:OperatorMonoNerdFontMono:pixelsize=24:antialias=true:style=Medium
URxvt*italicFont: xft:OperatorMonoNerdFontMono:pixelsize=24:antialias=true:style=Medium\ Italic
URxvt*boldFont: xft:OperatorMonoNerdFont:pixelsize=24:antialias=true
! URxvt*font: xft:OperatorMono Nerd Font:pixelsize=24:antialias=true
! URxvt*font: xft:OperatorMono Nerd Font:pixelsize=24:antialias=true:minspace=False, xft:DejaVu Sans:pixelsize=24
! URxvt*boldFont: xft:OperatorMono Nerd Font:pixelsize=24:antialias=true:minspace=False, xft:DejaVu Sans:pixelsize=24
! URxvt*font: xft:FantasqueSansMono Nerd Font:style=Bold:pixelsize=25
URxvt*letterSpace: 0
URxvt*allow_bold: true

! Xft.dpi: 196
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! URxvt Borders
URxvt*internalBorder: 0
URxvt*externalBorder: 0

! URxvt Enable link support
URxvt.perl-ext-common: default,matcher,clipboard,font-size

!disable the fucking bell
URxvt.insecure: false

! URxvt Copy paste shortcuts
URxvt.iso14755: False
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste

! URxvt Scrollbar and cursor style
URxvt*saveLines: 300000
URxvt.scrollBar: false
URxvt*cursorBlink: true
URxvt*cursorUnderline: true
! URxvt Dynamic font size
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease


