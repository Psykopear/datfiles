general {
  colors = true
  interval = 4
  color_good =     '#64a2d9'
  color_degraded = '#ccdc90'
  color_bad =      '#e89393'
}


order += "disk /"
order += "wireless wlp58s0"
order += "battery 0"
order += "volume master"
order += "time"

wireless wlp58s0 {
  format_up = "W: %quality %ip "
  format_down = "W: down"
}

